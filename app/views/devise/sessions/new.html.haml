%section
  .wrapper
    %h3 Вход в личный кабинет
    = simple_form_for resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'forms'} do |f|
      = bootstrap_flash
      = f.input :email, label: 'Электропочта', :required => false, :autofocus => true
      = f.input :password, label: 'Пароль', :required => false
      = f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
      = f.button :submit, "Вход"
    = render "devise/shared/links"
