.comment
  = link_to '', comment_path(comment), method: :delete, remote: true, class: 'delete-comment__link pull-right' if current_user && current_user.is_admin?
  .comment-image
    = image_tag comment.user.avatar_url(:thumb)
  .comment-content
    .comment-title
      %span.name= comment.user.nickname
      %span.created_at
        Ğ²
        = get_time comment.created_at
    .comment-message= comment.message    
  .clear