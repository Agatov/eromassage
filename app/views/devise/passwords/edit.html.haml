%section
  .wrapper
    %h2 Смена пароля
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: 'forms' }) do |f|
      = bootstrap_flash
      = f.input :reset_password_token, :as => :hidden
      = f.full_error :reset_password_token
      = f.input :password, :label => "Новый пароль", :required => true, :autofocus => true
      = f.input :password_confirmation, :label => "Подтверждение пароля", :required => true
      = f.button :submit, "Сменить пароль"
    = render "devise/shared/links"
