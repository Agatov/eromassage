.girl
  .avatar
    = image_tag girl.avatar_url(:preview)
  .info
    .name
      = girl.name
      - if girl.available_today
        %small
          работает сегодня
    .parameters
      .parameter
        .label
          Возраст:
        .value
          = girl.age.to_s
          лет
      .parameter
        .label
          Грудь:
        .value
          = girl.bubs.to_s
          размер
      .parameter
        .label
          Рост:
        .value
          = girl.height.to_s
          см
      .parameter
        .label
          Вес:
        .value
          = girl.weight.to_s
          кг

      -#.parameter
        .label
          Глаза:
        .value
          = girl.eyes


  .modal-template
    .header
      .title
        = "#{girl.name}, #{girl.age.to_s} лет"
        8 (962) 918-69-85
    .photos#girl-photos
      - girl.photos.each do |photo|
        .photo{photo_id: photo.id}
          = image_tag photo.image_url(:full)
    .content-wrapper
      .content-links
        = link_to 'Комментарии', root_path, data: {type: :comments}
        = link_to 'Фотографии', root_path, data: {type: :photos}
      .gallery.girl-gallery
        - girl.photos.each do |photo|
          .preview{photo_id: photo.id}
            -#.overlay
            = image_tag photo.image_url(:preview) 
      .comments-wrapper
        .comments
          = render girl.comments      
        .comment__new
          = form_for @comment, url: girl_comments_path(girl_id: girl.id), remote: true do |f|
            = f.text_field :message
            = f.submit 'Отправить', class: 'btn'